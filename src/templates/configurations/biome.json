{
  "$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
  "files": {
    "include": ["**/*"],
    "ignore": [
      "node_modules",
      "dist",
      "build",
      "coverage",
      ".next",
      ".turbo",
      ".vercel",
      ".cache",
      ".output",
      "tmp",
      "out",
      "pnpm-lock.yaml",
      "yarn.lock"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "indentWidth": 4,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": { "recommended": true },
      "performance": { "recommended": true },
      "security": { "recommended": true },
      "correctness": { "noUnusedVariables": "warn" },
      "complexity": { "noUselessCatch": "warn" },
      "style": {
        "useBlockStatements": "error",
        "noVar": "error",
        "noParameterAssign": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always"
    }
  },
  "typescript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always"
    }
  },
  "organizeImports": { "enabled": true },
  "overrides": [
    {
      "include": ["**/*.md", "**/*.mdx"],
      "formatter": { "lineWidth": 80 }
    },
    {
      "include": ["**/*.{yml,yaml}"],
      "formatter": { "indentStyle": "space", "indentWidth": 2 }
    },
    {
      "include": ["**/*.json", "**/*.jsonc", "**/*.json5"],
      "formatter": { "indentStyle": "space", "indentWidth": 2 }
    },
    {
      "include": ["**/*.{config,cfg}.{js,ts,mjs,cjs}"],
      "linter": { "rules": { "complexity": { "recommended": false } } }
    }
  ]
}
