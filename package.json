{
	"name": "create-absolutejs",
	"description": "A CLI tool to create a new AbsoluteJS project",
	"version": "0.0.8",
	"license": "CC BY-NC 4.0",
	"author": "Alex Kahn",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"create-absolutejs": "dist/index.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "rm -rf dist && bun build src/index.ts --outdir dist --target=esnext && tsc --emitDeclarationOnly --project tsconfig.json",
		"test": "echo \"Error: no test specified\" && exit 1",
		"format": "prettier --write \"./**/*.{js,jsx,ts,tsx,css,json}\"",
		"dev": "bun run src/index.ts",
		"lint": "eslint ./",
		"typecheck": "bun run tsc --noEmit",
		"release": "bun run format && bun run build && bun publish"
	},
	"devDependencies": {
		"@stylistic/eslint-plugin-ts": "4.2.0",
		"@types/bun": "latest",
		"@types/react": "19.1.4",
		"drizzle-kit": "^0.31.1",
		"eslint": "9.26.0",
		"eslint-plugin-absolute": "0.0.3",
		"eslint-plugin-import": "2.31.0",
		"eslint-plugin-promise": "7.2.1",
		"eslint-plugin-security": "3.0.1",
		"prettier": "3.5.3",
		"drizzle-orm": "0.41.0",
		"typescript-eslint": "8.32.0"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@clack/prompts": "0.10.1",
		"picocolors": "1.1.1"
	}
}
